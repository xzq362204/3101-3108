{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "plugins": {
      "type": "object",
      "patternProperties": {
        "^.+$": {
          "type": "object",
          "addtionalProperties": false,
          "properties": {
            "args": {
              "type": "object",
              "properties": {}
            },
            "enabled": {
              "type": "boolean",
              "default": true
            }
          }
        }
      },
      "additionalProperties": false
    }
  }
}
